# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=pinterest_analytics
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=pinterest-analytics-bucket

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=pinterest_

# ML Model Settings
MODEL_UPDATE_FREQUENCY=24  # hours
RECOMMENDATION_CACHE_TTL=3600  # seconds

# SageMaker
SAGEMAKER_ROLE_ARN=arn:aws:iam::your-account:role/SageMakerRole
SAGEMAKER_ENDPOINT_NAME=pinterest-recommender-endpoint